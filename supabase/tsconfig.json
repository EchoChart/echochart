{
   "compilerOptions": {
      "target": "ESNext", // Modern JavaScript target
      "module": "ESNext", // ESNext module system
      "baseUrl": ".", // Base URL for relative imports
      "useDefineForClassFields": true, // Define class fields according to the spec
      "moduleResolution": "node", // Use Node-style module resolution
      "strict": true, // Enable strict mode
      "sourceMap": true, // Generate source maps
      "resolveJsonModule": true, // Allow importing JSON files
      "esModuleInterop": true, // Allow interop with ES modules
      "skipLibCheck": true,
      "composite": true,
      "emitDeclarationOnly": true, // Skip checking of library files
      "allowImportingTsExtensions": true
   },
   "include": [
      "**/*.ts" // Include all .ts files in src directory for functions
   ]
}
