{
    "compilerOptions": {
        "allowJs": true,
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "baseUrl": ".",
        "types": ["vite/client", "node"],
        "useDefineForClassFields": true,
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "paths": {
            "@/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@style/*": ["src/assets/style/*"],
            "@plugins/*": ["src/plugins/*"],
            "@components/*": ["src/components/*"],
            "@store/*": ["src/store/*"],
            "@lib/*": ["src/lib/*"],
            "@services/*": ["src/services/*"],
            "@composables/*": ["src/composables/*"],
            "@types": ["@types/*"]
        },
        "allowSyntheticDefaultImports": false
    },
    "include": [
        "src/**/*.*",
        "@types/**/*.ts",
        "auto-imports.d.ts",
        "tailwind.config.js",
        "vite.config.mjs",
        "src/router/middlewares/before-each/showDialog"
    ]
}
