{
   "files.exclude": {
      "node_modules/": true,
      "**/.DS_Store": true
   },
   "eslint.workingDirectories": [{ "mode": "auto" }, { "directory": "." }],
   "[javascript][json][vue][scss][yaml]": {
      "editor.defaultFormatter": "esbenp.prettier-vscode"
   },
   "javascript.preferences.quoteStyle": "single",
   "stylelint.validate": ["css", "less", "postcss", "scss", "vue"],
   "editor.formatOnSave": true,
   "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "always",
      "source.organizeImports": "always"
   },
   "highlight.regexes": {
      "(<(/)?template(>)?)": {
         "filterFileRegex": ".((v(ue)?)|(j|t)s(x)?)$",
         "regexFlags": "gms",
         "maxMatches": "1",
         "decorations": [
            {
               "backgroundColor": "rgb(240 101 41 / 70%)",
               "color": "white",
               "fontWeight": "bold"
            }
         ]
      },
      "(<(/)?script(>)?)": {
         "filterFileRegex": ".((v(ue)?)|(j|t)s(x)?)$",
         "decorations": [
            {
               "backgroundColor": "rgb(210 189 49 / 70%)",
               "color": "darkgreen",
               "fontWeight": "bold"
            }
         ]
      },
      "(<(/)?style(>)?)": {
         "filterFileRegex": ".((v(ue)?)|(j|t)s(x)?)$",
         "decorations": [
            {
               "backgroundColor": "rgb(68 107 255 / 70%)",
               "color": "white",
               "fontWeight": "bold"
            }
         ]
      }
   }
}
